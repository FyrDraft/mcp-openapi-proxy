{
    "mcpServers": {
        "mcp-openapi-proxy": {
            "command": "uvx",
            "args": [
                "--from",
                "git+https://github.com/matthewhand/mcp-openapi-proxy",
                "mcp-openapi-proxy"
            ],
            "env": {
                "OPENAPI_SPEC_URL": "https://api.quivr.app/openapi.json",
                "TOOL_WHITELIST": "/api/v1/documents,/api/v1/chat",
                "API_AUTH_BEARER": "your_quivr_token_here"
            }
        }
    }
}