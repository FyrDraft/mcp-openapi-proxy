{
    "mcpServers": {
        "mcp-openapi-proxy": {
            "command": "uvx",
            "args": ["--from", "git+https://github.com/matthewhand/mcp-openapi-proxy", "mcp-openapi-proxy"],
            "env": {
                "OPENAPI_SPEC_URL": "https://your-ghost-instance.com/ghost/api/v3/admin/openapi.json",
                "SERVER_URL_OVERRIDE": "https://your-ghost-instance.com/ghost/api/v3/admin",
                "TOOL_WHITELIST": "/posts,/users",
                "API_KEY": "your-ghost-jwt-here",
                "TOOL_NAME_PREFIX": "ghost_",
                "DEBUG": "true"
            }
        }
    }
}
