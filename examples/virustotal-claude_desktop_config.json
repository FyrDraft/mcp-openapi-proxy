{
  "mcpServers": {
    "virustotal": {
      "command": "uvx",
      "args": [
        "mcp-openapi-proxy"
      ],
      "env": {
        "OPENAPI_SPEC_URL": "file://${PWD}/examples/virustotal.openapi.yml",
        "API_KEY": "${VIRUSTOTAL_API_KEY}",
        "API_AUTH_HEADER": "x-apikey",
        "API_AUTH_TYPE": ""
      }
    }
  }
}