{
    "mcpServers": {
        "mcp-openapi-proxy": {
            "command": "uvx",
            "args": ["--from", "git+https://github.com/matthewhand/mcp-openapi-proxy", "mcp-openapi-proxy"],
            "env": {
                "OPENAPI_SPEC_URL": "https://raw.githubusercontent.com/openai/openai-openapi/master/openapi.yaml",
                "SERVER_URL_OVERRIDE": "https://api.openai.com/v1",
                "TOOL_WHITELIST": "/chat/completions,/models",
                "API_KEY": "your-openai-api-key-here",
                "TOOL_NAME_PREFIX": "openai_",
                "DEBUG": "true"
            }
        }
    }
}
