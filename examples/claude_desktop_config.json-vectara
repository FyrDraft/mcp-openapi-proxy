{
  "mcpServers": {
    "mcp-openapi-proxy": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/matthewhand/mcp-openapi-proxy",
        "mcp-openapi-proxy"
      ],
      "env": {
        "OPENAPI_SPEC_URL": "https://docs.vectara.com/vectara-oas.yaml",
        "TOOL_WHITELIST": "/v1/search",
        "API_AUTH_BEARER": "your_vectara_token_here",
        "TOOL_NAME_PREFIX": "vectara"
      }
    }
  }
}